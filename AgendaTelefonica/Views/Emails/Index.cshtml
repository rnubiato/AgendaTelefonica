@model IEnumerable<AgendaTelefonica.Models.Email>

@{
    ViewBag.Title = "Lista";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo E-mail", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Contato.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoEmail)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.OrderBy(item => item.Contato.Nome))
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Contato.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoEmail)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IDEmail }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.IDEmail }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.IDEmail })
        </td>
    </tr>
}

</table>
