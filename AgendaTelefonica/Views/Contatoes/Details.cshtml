@model AgendaTelefonica.Models.Contato

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes</h2>

<div>
    <h4>Contato</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Endereco)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Empresa)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Empresa)
        </dd>

        <dt>
            Telefones
        </dt>

        <dd>
            @foreach (var itemFone in Model.Telefones)
            {
                <span>@itemFone.Numero - @itemFone.TipoTelefone<br/></span>
            }
        </dd>

        <dt>
            E-mails
        </dt>

        <dd>
            @foreach (var itemMail in Model.Emails)
            {
                <span>@itemMail.Mail - @itemMail.TipoEmail<br /></span>
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.IDContato }) |
    @Html.ActionLink("Voltar para Lista", "Index")
</p>