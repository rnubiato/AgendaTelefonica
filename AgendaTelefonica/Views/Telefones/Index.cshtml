@model IEnumerable<AgendaTelefonica.Models.Telefone>

@{
    ViewBag.Title = "Lista";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo Telefone", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Contato.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Numero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoTelefone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.OrderBy(item => item.Contato.Nome)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Contato.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoTelefone)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IDTelefone }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.IDTelefone }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.IDTelefone })
        </td>
    </tr>
}

</table>
